<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:background="@drawable/newcard">

    <Button
        android:id="@+id/touchArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/uninstallImageButton"
        android:background="@drawable/listview_button_selector"
        android:text="" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageView">

    <TextView
        android:id="@+id/packageNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:lines="1"
        android:text="Package Name"
        android:textColor="@color/dev_drawer_orange"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="App Name"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/app_name_light"
        android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/uninstallImageButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/appDetailsImageButton"
        android:scaleType="centerInside"
        android:src="@drawable/delete_imageview" />

    <ImageView
        android:id="@+id/appDetailsImageButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:scaleType="centerInside"
        android:src="@drawable/settings_imageview" />

</RelativeLayout>