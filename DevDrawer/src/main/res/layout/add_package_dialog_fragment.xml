<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:minWidth="1000dp">

    <LinearLayout
        android:id="@+id/activity_main_packagefiltercontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/activity_main_filterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/packagefilter"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:id="@+id/addPackage"
            style="@style/AutoCompleteDevDrawerTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:hint="@string/yourcompanyhint"
            android:inputType="textVisiblePassword" />

        <ImageButton
            android:id="@+id/addButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:src="@drawable/add_imageview" />
    </LinearLayout>

</LinearLayout>